<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itesm.mx.red_contactos_am">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="Con-Tacto"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".contactosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MessageActivitiy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".adminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddContactActivity"
            android:label="@string/title_activity_add_contact"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".InfoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".InformationActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_information" />
        <activity android:name=".ActualizarActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>